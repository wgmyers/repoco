extends layout

block append styles
  link(rel="stylesheet" href="/css/easymde/easymde.min.css")

block append scripts
  script(src="/js/easymde/easymde.min.js")
  script(src="/js/editor.js")

block layout-content
  main.flex-shrink-0
    .container
      .row
        .col-md-3
          include filetree.pug
        .col-md-9
          .row
            .col-md-9
              h1 Editor
            .col-md-3.text-end.align-self-center
              button.btn.btn-secondary(type=button disabled=true id="txt-save") Save
              button.btn.btn-secondary.mx-2(type=button disabled=true id="txt-revert") Revert
          .row
            textarea
              
    .modal(tabindex="-1" id="modal-editor")
      .modal-dialog
        .modal-content
          .modal-header
            h5.modal-title(id="modal-title") My Modal Title
            button.btn-close(type=button data-bs-dismiss="modal" aria-label="Close")
          .modal-body
            p(id="modal-text") Hello! I am a modal
          .modal-footer
            button.btn.btn-secondary(type=button data-bs-dismiss="modal" id="modal-cancel") Cancel
            button.btn.btn-primary(type=button id="modal-ok") Ok

  
